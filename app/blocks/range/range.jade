mixin range(props)

	//- Вызов:
		+range({
		  titleStart: '0',
		  titleEnd: '100%'
		  dots: [{
			title: '20%',
			value: '100px'
		  },
		  rangeBtnPosition: 0px]
		})
	-
		if (typeof props.titleStart === 'undefined')
			props.titleStart = ''
		if (typeof props.titleEnd === 'undefined')
			props.titleEnd = ''
		if (typeof props.rangeBtnPosition === 'undefined')
			props.rangeBtnPosition = '0px'

	.range&attributes(attributes)
		input.range__button(type='image' src='images/icon-range-btn.png' alt="Бегунок")(style={left: props.rangeBtnPosition})
		ul.range__dots.dots-range
			li.dots-range__item.dots-range__item--start
				span.dots-range__title #{props.titleStart}

			each dot in props.dots
				li.dots-range__item.dots-range__item--middle(style={left: dot.value})
					span.dots-range__title #{dot.title}

			li.dots-range__item.dots-range__item--end
				span.dots-range__title #{props.titleEnd}

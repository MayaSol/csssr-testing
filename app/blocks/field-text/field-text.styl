field-text--jobform()
	display flex
	.field-text
		display block
	.field-text__input-wrap
		position relative
		flex-grow 1
		&::after
			position absolute
			left 0
			bottom 0
			display block
			width 100%
			height 4px
			content ''
			background-image url('../images/input-bottom-bg.png')
	.field-text__input
		padding 0 10px
		width 100%
		font-family font-family--monospace
		font-size rem(30px)
		font-weight 400
		line-height rem(36px)
		color #231f20
		background transparent
		border none
		outline none

field-text__anketa()
	display flex
	.field-text__input-wrap
		position relative
		flex-grow 1
		&::after
			content ''
			position absolute
			left 0
			bottom 0
			width 100%
			height 4px
			background-image url('../images/input-bottom-bg.png')
			display block
	.field-text__input
		width 100%
		padding 0 10px
		border-bottom: 1px
		font-family font-family--monospace
		font-size rem(30px)
		font-weight 400
		line-height rem(36px)
		color #231f20
		background transparent
		border none
		outline none


.field_text
	display block


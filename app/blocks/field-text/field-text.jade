mixin field-text(props)

	//- Вызов:
		+field_text({
		  title: 'Название',
		  classes: '',
		  val: '',
		  attrs: {
			name: 'comment',
		  }
		})

	-
		if(typeof props === 'undefined') {
			var props = {};
		}
		if(typeof props.attrs === 'undefined') {
			props.attrs = {};
		}
		if(typeof props.classes === 'undefined') {
			props.classes = '';
		}

	label.field-text(class=props.classes)&attributes(attributes)
		if !(typeof props.title === 'undefined')
			span.field-text__name!= props.title
		span.field-text__input-wrap
			input.field-text__input( type='text', value=(props.val !== null) ? props.val : '')&attributes(props.attrs)
		block

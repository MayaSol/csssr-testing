.info
    display block
    margin-top 45px
    margin-bottom 55px

.field-text--info
    display flex
    margin-bottom 13px
    font-family font-family--headings
    color #2f1b15
    font-size rem(22px)
    font-weight 700
    line-height rem(49.83px)
    align-items flex-end
    .field-text__name
        margin-right 15px
        line-height rem(22px)
    .field-text__input-wrap
        position relative
        flex-grow 1
        &::after
            content ''
            position absolute
            left 0
            bottom 0
            width 100%
            height 4px
            background-image url('../images/input-bottom-bg.png')
            display block
    .field-text__input
        width 100%
        padding 0 15px
        border-bottom: 1px
        font-family font-family--monospace
        font-size rem(30px)
        font-weight 400
        line-height rem(36px)
        color #231f20
        background transparent
        border none
        outline none



